# SONAR Hub Configuration

# PostgreSQL Database Settings
SONAR_HUB_POSTGRES_HOST=postgres
SONAR_HUB_POSTGRES_PORT=5432
SONAR_HUB_POSTGRES_DB=sonar
SONAR_HUB_POSTGRES_USER=sonar
SONAR_HUB_POSTGRES_PASSWORD=sonar_dev_password
SONAR_HUB_POSTGRES_SSLMODE=disable

# Alternatively, use a full connection string:
# SONAR_HUB_POSTGRES_DSN=postgresql://user:password@host:port/database?sslmode=disable
# or
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=disable

# Hub Application Settings
SONAR_HUB_APP_URL=http://localhost:8090
SONAR_HUB_USER_EMAIL=admin@sonar.dev
SONAR_HUB_USER_PASSWORD=admin123

# Authentication Settings
SONAR_HUB_DISABLE_PASSWORD_AUTH=false
SONAR_HUB_USER_CREATION=true
SONAR_HUB_MFA_OTP=false

# System Sharing
SONAR_HUB_SHARE_ALL_SYSTEMS=false

# Container Details
SONAR_HUB_CONTAINER_DETAILS=true

# Auto-login (for development only, DO NOT use in production)
# SONAR_HUB_AUTO_LOGIN=admin@sonar.dev

# Trusted Auth Header (for reverse proxy authentication)
# SONAR_HUB_TRUSTED_AUTH_HEADER=X-Forwarded-User

# SONAR Agent Configuration

# Agent Listen Port
SONAR_AGENT_LISTEN=45876

# Agent Authentication (get these from the hub UI)
SONAR_AGENT_KEY=
SONAR_AGENT_TOKEN=

# Hub URL for agent connection
SONAR_AGENT_HUB_URL=http://localhost:8090

# Agent Log Level (debug, info, warn, error)
SONAR_AGENT_LOG_LEVEL=info

# Memory Calculation Formula (optional)
# SONAR_AGENT_MEM_CALC=

# Disk Usage Cache Duration (optional, to avoid waking sleeping disks)
# SONAR_AGENT_DISK_USAGE_CACHE=15m
